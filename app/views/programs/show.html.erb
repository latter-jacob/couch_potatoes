<h1> <%=@program.title%></h1>

<h3> <%= @program.genre %> </h3>

<p>
  Start year: <%= @program.start_year %>
</p>

<p>
  End year: <%= @program.end_year %>
</p>

<% unless @reviews == [] %>
  <h3>Reviews:</h3>
  <ul>
    <% @reviews.each do |review| %>
      <div class="review">
        <li><strong><%= review.rating %> - <%= review.user.email %></strong><br>
        <%= review.body %> </li>
        <div class="vote-buttons">
          <%= image_tag "plus_button.png", id: "plus_button" %>
          <%= image_tag "minus_button.png", id: "minus_button" %>
        </div>
      </div>
    <% end %>
  </ul>
<% end %>

<h2>Add a review!</h2>
<%= form_for [@program, @review] do |f| %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit ("Add Review")%>
<% end %>

<%= link_to 'Edit', edit_program_path(@program) %>
