<!DOCTYPE html>
<html>
  <head>
    <title>CouchPotatoes</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'ratyrate.js', "data-turbolinks-track" => false %>
  </head>
  <body>
    <div id="nav-container">
      <div class="row">
        <div class="container">
          <%= render "layouts/nav" %>
        </div>
      </div>
    </div>
    <div id="background">
      <div class="row" id="content">
        <%- flash.each do |key, value| -%>
          <div class="alert-box flash flash-<%= key %>">
            <%= value %>
          </div>
        <%- end -%>
          <%= yield %>
      </div>
    <%= javascript_include_tag 'application' %>
    <%= yield :extra_footer %>
    </div>
  </body>
</html>
