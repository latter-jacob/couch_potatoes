<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="/">Couch Potatoes</a></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->

    <ul class="right">
      <%= render "layouts/search_bar" %>

      <% if current_user %>
        <li class="has-dropdown">
          <a href="#"><%= image_tag "#{current_user.profile_photo}", id: "profile_photo"%></a>
          <ul class="dropdown">
            <li>
              <% if current_user.try(:admin?) %>
                Admin
              <%- else-%>
                User
              <%- end -%>
              <%= current_user.email %>
            </li>
            <li>
              Profile Page
            </li>
            <li>
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </li>
      <%- else -%>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
      <%- end -%>
    </ul>
    <!-- Left Nav Section -->
    <ul class="left">
      <li class="active"><%= link_to "Random", program_path(random_program) %></li>
      <li class="has-dropdown">
        <a href="#">Browse Genres</a>
        <ul class="dropdown">
          <% Genre.all.order(:name).each do |genre| %>
          <li>
            <%= link_to genre.name, "/programs?genre_id=#{genre.id}" %>
          </li>
          <% end %>
        </ul>
      </li>
    </ul>
  </section>
</nav>
